<h1> <%= @list.name %></h1>

<% @list.books.uniq.each_with_index do |book, index| %>
	<p><%= index+1 %>. <%= link_to book.title, book_path(book) %> by <%= book.author.name %></p>
	<ul>
		<% comments = Listing.find_listing(book: book, list: @list).comments %>
		<% if !comments.blank? %>
			<li> <%= comments %> </li>
		<% end %>
	</ul>
<% end %>

<span class='link'><%= your_list?(@list) %></span>

